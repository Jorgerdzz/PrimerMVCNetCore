<h1>Codigo Razor</h1>
@{
    //ESTO ES CÓDIGO C#
    int valor = 14;
    string dato = "Hoy es jueves!!!";
    valor += 1;
    dato += " y mañana viernes!!!";
}

<h2 style="color:blue">
    Variables: @dato, @valor
</h2>

@if (valor > 0)
{
    //CODIGO C#
    dato = "POSITIVO";
    <h2 style="color:green">
        @dato
    </h2>
}
else
{
    //CODIGO C#
    dato = "NEGATIVO";
    <h2 style="color:red">
        @dato
    </h2>
}